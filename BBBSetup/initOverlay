#!/bin/bash

echo "Compiling the overlays from .dts to .dtbo"
 
dtc -O dtb -o BB-DCAN1-00A0.dtbo -b 0 -@ BB-DCAN1-00A0.dts
dtc -O dtb -o BB-ADC-00A0.dtbo -b 0 -@ BB-ADC-00A0.dts
dtc -O dtb -o BB-PWM1-00A0.dtbo -b 0 -@ BB-PWM1-00A0.dts
dtc -O dtb -o BB-PRU-01-00A0.dtbo -b 0 -@ BB-PRU-01-00A0.dts
dtc -O dtb -o BB-GPIO-01-00A0.dtbo -b 0 -@ BB-GPIO-01-00A0.dts
dtc -O dtb -o w1-00A0.dtbo -b 0 -@ w1.dts

cp BB-DCAN1-00A0.dtbo /lib/firmware
cp BB-ADC-00A0.dtbo /lib/firmware
cp BB-PWM1-00A0.dtbo /lib/firmware
cp BB-PRU-01-00A0.dtbo /lib/firmware
cp BB-GPIO-01-00A0.dtbo /lib/firmware
cp w1-00A0.dtbo /lib/firmware


cat /sys/devices/platform/bone_capemgr/slots | grep BB-ADC > /dev/null
if [ $? -ne 0 ] ; then
  echo "Writing ADC"
  echo BB-ADC > /sys/devices/platform/bone_capemgr/slots
fi

cat /sys/devices/platform/bone_capemgr/slots | grep BB-DS18B20-01 > /dev/null
if [ $? -ne 0 ] ; then
  echo "Writing W1"
  echo w1 > /sys/devices/platform/bone_capemgr/slots

fi

cat /sys/devices/platform/bone_capemgr/slots | grep BB-PWM1 > /dev/null
if [ $? -ne 0 ] ; then
  echo "Writing PWM1"
  echo BB-PWM1 > /sys/devices/platform/bone_capemgr/slots
  echo 0 > /sys/class/pwm/pwmchip0/export # This sets up pwm0 for use. Check README.md
fi

cat /sys/devices/platform/bone_capemgr/slots | grep BB-PRU-01 > /dev/null
if [ $? -ne 0 ] ; then
  echo "Writing PRU Pins"
  echo BB-PRU-01 > /sys/devices/platform/bone_capemgr/slots
  echo "Waiting one second"
  sleep 1
  echo "Installing firmware"
  sh ./initPRU
fi

cat /sys/devices/platform/bone_capemgr/slots | grep BB-GPIO-01 > /dev/null
if [ $? -ne 0 ] ; then
  echo "Writing GPIO Pins"
  echo BB-GPIO-01 > /sys/devices/platform/bone_capemgr/slots
  echo 66 > /sys/class/gpio/export # sets up P8_11
  echo 67 > /sys/class/gpio/export # sets up P8_12
  echo 69 > /sys/class/gpio/export # sets up P8_13
  echo 68 > /sys/class/gpio/export # sets up P8_14
fi

cat /sys/devices/platform/bone_capemgr/slots | grep BB-DCAN1 > /dev/null
if [ $? -ne 0 ] ; then
  echo "Writing CAN"
  echo BB-DCAN1 > /sys/devices/platform/bone_capemgr/slots
  modprobe can
  modprobe can-dev
  modprobe can-raw

  echo "Configuring CAN. This might take a second"
  sleep 3
  
  # ifconfig | grep can0 > /dev/null
  # while [ $? -ne 0 ] ; do
  #   echo "Sleeping one, can0 not present"
  #   sleep 1
  #   ifconfig | grep can0 > /dev/null
  # done

  ip link set can0 up type can bitrate 500000
  ifconfig can0 up
fi

#echo BB-SPI-M-01 > /sys/devices/platform/bone_capemgr/slots
#echo bspm_P9_12_27 > /sys/devices/platform/bone_capemgr/slots
#echo bspm_P9_15_f  > /sys/devices/platform/bone_capemgr/slots

cat /sys/devices/platform/bone_capemgr/slots



exit 0
